{
  "name": "@yangcurve/case",
  "description": "TypeScript case converter",
  "version": "1.0.9",
  "license": "MIT",
  "author": "yangcurve <utsu0621@gmail.com>",
  "repository": "github:yangcurve/case",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "bun test",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "prettier -w ./ && biome check --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "experimentalTernaries": true
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@types/bun": "latest",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0"
  },
  "peerDependencies": {
    "typescript": "latest"
  }
}
